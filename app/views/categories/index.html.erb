<h1>Categories</h1>

<% if @categories.any? %>
  <ul>
    <% @categories.each do |category| %>
      <li>
        <%= link_to category.name, category %> <!-- Link to category's show page -->
        <p><%= category.description %></p> <!-- Display category description -->
        <p>Created at: <%= category.created_at %></p> <!-- Display creation date -->
        <p>Updated at: <%= category.updated_at %></p> <!-- Display last update date -->
        <!-- Add edit and delete links if necessary (assuming current_user is available) -->
        <% if category.user == current_user %>
          <%= link_to 'Edit', edit_category_path(category) %> |
          <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No categories found.</p>
<% end %>

<%= link_to 'New Category', new_category_path %> <!-- Link to create a new category -->
